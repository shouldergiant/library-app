<div class="jumbotron">
  <div class="container">
    <h1 class="text-center">{{headerMessage}}</h1>
    <div class="form-horizontal form-group form-group-md row">
      <div class="cont-input col-xs-6 col-xs-offset-3 col-sm-6 col-sm-offset-3 col-md-6">
        {{input type="email" value=emailAddress class="form-control" placeholder="Please type your e-mail address." autofocus="autofocus"}}
      </div>
    <div class="form-horizontal form-group form-group-md row">
    <div class="col-xs-6 col-xs-offset-3 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3">
      {{textarea class="form-control" placeholder="Your message. (At least 5 characters.)" rows="5" value=message}}
    </div>
        <div class="col-xs-6 col-xs-offset-3 col-sm-6 col-sm-offset-3 col-md-6 col-md-offset-3">
          <button class="btn btn-primary btn-lg btn-block" disabled={{isInvalid}} {{action 'saveMessage'}}>Send message</button>
        </div>
    </div>
    {{#if responseMessage}}
      <div class="alert alert-success text-center">
        {{responseMessage}}
      </div>
    {{/if}}
  </div>
</div>
</div>



{{outlet}}
